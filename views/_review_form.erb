<% form({method: :post}, {obj: @parameters}) do |f|%>
  <div class="grid-x margin-x">
    <div class="large-12 cell">
        <%=f.input(:name, type: :text, label: 'Имя', placeholder: 'Иван')%>
    </div>
    <div class="large-12 cell">
        <%=f.input(:mark, type: :radioset, label: 'Оценка', options: 0.upto(10).to_a)%>
    </div>
    <div class="large-12 cell">
        <%=f.input(:description, type: :text, label: 'Отзыв', placeholder: 'Хороший фильм')%>
    </div>
    <div class="large-12 cell">
        <%=f.input(:date, type: :date, label: 'Дата отзыва', placeholder: '29-05-2021')%>
    </div>
    <div class="large-12 cell">
        <%=f.button(value: form_type, class: 'button')%>
        <a href="<%= back_location %>" class="button secondary">Отмена</a>
    </div>
  </div>
<%end%>